azul = #22BCE0;
gris_oscuro = #444;
naranja = #DD4F42
gris_texto = #7A7A7A

@font-face {
	font-family: 'iconitos';
	src:url('../fonts/icomoon.eot?vbxv8q');
	src:url('../fonts/icomoon.eot?#iefixvbxv8q') format('embedded-opentype'),
		url('../fonts/icomoon.woff?vbxv8q') format('woff'),
		url('../fonts/icomoon.ttf?vbxv8q') format('truetype'),
		url('../fonts/icomoon.svg?vbxv8q#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

body {
	background: #E8E8E8;
	color: gris_oscuro;
	font-family: Arial;
	font-size: 16px;

}

a 
	color naranja

header
	background gris_oscuro
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	color white
	overflow hidden
	padding 0.5em
	position relative
	z-index: 1

	.logo
		border-right 1px solid azul
		width 60px
		float left

		img
			width 52px

	.titular
		margin 0 60px 0 70px

		.filtro
			color azul
			text-decoration none
			font-weight bold
			font-style italic

		.publicar
			background naranja
			color white
			margin -5px 1em 0 0
			padding 0.2em 0.5em
			text-decoration none
			font-style italic
			text-shadow 1px 1px 0px black
			float: right

		.publicar:before
			display inline-block
			margin 0 3px 0 0
			font-family "iconitos"
			content: "\e600";

		.titulo
			font-size 18px;
			font-weight normal
			margin 0
			padding 0


	.usuario
		position absolute
		right: 10px
		top: 10px

		.avatar
			position: relative
			margin 0 1em 0 0
			z-index: 2

			img
				width 50px
				border-radius 50%

		.flechita
			text-decoration none
			position: absolute
			display: block
			width: 2em
			top 15px
			padding 1.5px
			right 0
			width: 50%
			color white
			background naranja
			text-align right

		.flechita:before
			font-family iconitos
			content "\e603"
			text-shadow 1px 1px 0 black

nav
	background: azul
	border-left 15px solid white
	position: relative

	&:before 
		position: absolute
		border-bottom 20px solid transparent
		border-left 7px solid white
		border-top 20px solid transparent
		content ""

	.menu
		margin 0
		margin-left 15px
		height 40px
		padding 0
		line-height 40px
		overflow-x auto
		white-space nowrap

		li
			display inline-block

			a 
				color white
				padding 0
				margin 0 0.5em
				text-decoration none
				display inline-block

.posts
	padding 0.5em

	.post 
		margin-bottom 1em;
		background white
		border-radius 0 0 0.5em 0.5em
		color gris_texto
		box-shadow 2px 2px 10px rgba(black, 0.5)

		.acciones
			border-top 3px solid azul
			padding 0.5em
			overflow hidden

			.datos
				float right

				.comentarios
					position: relative
					background gris_texto
					color white
					padding 2px 5px
					text-decoration none
					border-radius 3px
					margin  0 1em 0 0

					&:before 
						position: absolute
						top 21px 
						left 16px
						border-right 4px solid transparent
						border-top 5px solid gris_texto
						border-left 4px solid transparent
						content ""

				.estrellita
					text-decoration none
					color #F7E853
					
					&:after 
						font-family "iconitos"
						content "\e601"


			.votos
				float left

				.up
				.down
					font-size 1.5em
					text-decoration none
					vertical-align bottom

				.down
					color red

					&:before
						font-family iconitos
						content "\e603"

				.up
					color green

					&:before
						font-family iconitos
						content "\e602"
				


		.descripcion
			color gris_texto

			.detalles
				height 160px
				margin-left 130px

				.autor
					margin 0.5em 0 2em 0

				.tag 
					background azul
					text-decoration none
					color white
					padding 0.2em 0.5em
					border-radius 0.5em

				.fecha 
					float right
					margin 0 1em 0 0

				.titulo
					font-size 18px
					font-style italic
					color gris_oscuro
					margin 0
					padding 0.5em 0.5em 0 0

			.imagen
				float left

				img
					vertical-align top
					height 160px
					width 120px 

footer
	background naranja
	color rgba(white,0.5) 
	text-align center
	height 70px;
	padding-top 10px;
	bottom 0
	width 100%

	h3
		font-size 14px
		font-weight normal

		strong 
			display block

		.mejor
			&:before
			&:after
				content " - "

@media screen and (min-width: 768px)

	.posts
		.post
			width 48%
			vertical-align top
			display inline-block

			&:nth-child(odd)
				margin-right 2%